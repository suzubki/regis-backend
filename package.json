{
  "name": "regis-backend",
  "version": "1.0.0",
  "description": "Regis backend. A simple backend for a registration system",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "start": "npx tsc & node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "node --watch -r ts-node/register -r tsconfig-paths/register src/index.ts",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "format": "npx dprint fmt",
    "lint": "eslint ."
  },
  "lint-staged": {
    "*.{js,ts}": [
      "dprint fmt",
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=20.6.0"
  },
  "author": "Darwin Narro",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.10",
    "drizzle-zod": "^0.5.1",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/pg": "^8.11.6",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "dprint": "^0.45.1",
    "drizzle-kit": "^0.21.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "globals": "^15.2.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.9.0"
  }
}
